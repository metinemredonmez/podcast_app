# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Bu dosyayi .env.prod olarak kopyalayin ve degerleri doldurun
# cp .env.prod.example .env.prod
#
# ONEMLI: Bu dosya git'e COMMIT edilmemeli!

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GUCLU_SIFRE_BURAYA
POSTGRES_DB=podcast_app

# Prisma icin tam URL
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=REDIS_SIFRE_BURAYA

# Redis URL (password ile)
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ===========================================
# JWT SECRETS (Min 32 karakter)
# ===========================================
# Guvenli secret olusturmak icin: openssl rand -hex 32
JWT_ACCESS_SECRET=BURAYA_64_KARAKTER_RANDOM_STRING_KOYUN
JWT_REFRESH_SECRET=BURAYA_FARKLI_64_KARAKTER_RANDOM_STRING

# ===========================================
# S3/MinIO STORAGE
# ===========================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=MINIO_GUCLU_SIFRE
S3_BUCKET=podcast-uploads
S3_REGION=us-east-1

# ===========================================
# ADMIN KULLANICI (Ilk kurulumda olusturulur)
# ===========================================
ADMIN_TENANT_NAME=Default Tenant
ADMIN_TENANT_SLUG=default
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAME=Platform Admin
ADMIN_PASSWORD=ADMIN_GUCLU_SIFRE

# ===========================================
# CORS & FRONTEND
# ===========================================
# Virgul ile ayrilmis domain listesi
CORS_ORIGINS=https://admin.yourdomain.com,https://yourdomain.com
FRONTEND_URL=https://admin.yourdomain.com

# ===========================================
# FRONTEND BUILD
# ===========================================
# Backend API URL (frontend build sirasinda kullanilir)
VITE_API_BASE_URL=https://api.yourdomain.com/api

# ===========================================
# OPSIYONEL SERVISLER
# ===========================================

# Email (Resend.com)
RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Podcast App

# Sentry Error Tracking
SENTRY_DSN=

# Elasticsearch (Arama icin)
ELASTICSEARCH_NODE=
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Grafana (Monitoring - sadece local docker icin)
GRAFANA_PASSWORD=admin

# ===========================================
# UYGULAMA AYARLARI
# ===========================================
NODE_ENV=production
PORT=3300
LOG_LEVEL=info
SWAGGER_ENABLED=false
