# ===========================================
# BACKEND PRODUCTION ENVIRONMENT
# ===========================================
# Sunucuda direkt calistirilacak

NODE_ENV=production
PORT=3300
LOG_LEVEL=info

# Database - Sunucudaki PostgreSQL
DATABASE_URL=${DATABASE_URL}

# Redis - Sunucudaki Redis
REDIS_URL=${REDIS_URL}

# JWT Configuration
JWT_ACCESS_SECRET=${JWT_ACCESS_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# CORS
CORS_ORIGINS=${CORS_ORIGINS}

# S3/MinIO Storage
S3_ENDPOINT=${S3_ENDPOINT}
S3_ACCESS_KEY=${S3_ACCESS_KEY}
S3_SECRET_KEY=${S3_SECRET_KEY}
S3_BUCKET=${S3_BUCKET:-podcast-uploads}
S3_REGION=${S3_REGION:-us-east-1}

# Queue Configuration
QUEUE_RETRY_ATTEMPTS=3

# Admin Setup
ADMIN_TENANT_NAME=${ADMIN_TENANT_NAME:-Default Tenant}
ADMIN_TENANT_SLUG=${ADMIN_TENANT_SLUG:-default}
ADMIN_EMAIL=${ADMIN_EMAIL}
ADMIN_NAME=${ADMIN_NAME:-Platform Admin}
ADMIN_PASSWORD=${ADMIN_PASSWORD}
ADMIN_PASSWORD_SALT_ROUNDS=12

# Swagger - Production'da kapali
SWAGGER_ENABLED=false

# Email (Resend) - Optional
RESEND_API_KEY=${RESEND_API_KEY:-}
EMAIL_FROM=${EMAIL_FROM:-noreply@podcast.app}
EMAIL_FROM_NAME=${EMAIL_FROM_NAME:-Podcast App}

# Frontend URL (email linkleri icin)
FRONTEND_URL=${FRONTEND_URL}

# Sentry Error Tracking - Optional
SENTRY_DSN=${SENTRY_DSN:-}

# Elasticsearch - Optional
ELASTICSEARCH_NODE=${ELASTICSEARCH_NODE:-}
ELASTICSEARCH_USERNAME=${ELASTICSEARCH_USERNAME:-}
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD:-}
