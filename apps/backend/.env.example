NODE_ENV=development
PORT=3300
LOG_LEVEL=info
APP_VERSION=1.0.0

# Sentry Error Tracking (Optional) - Sign up at https://sentry.io
SENTRY_DSN=
# SENTRY_ENABLED=true # Enable in development if needed

DATABASE_URL=postgresql://postgres:postgres@postgres:5432/podcast_app?schema=public
REDIS_URL=redis://redis:6379
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me-too
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
BCRYPT_SALT_ROUNDS=12

# CORS - Comma-separated list of allowed origins (use * to allow all - NOT recommended for production)
# Production example: https://app.yourdomain.com,https://admin.yourdomain.com
CORS_ORIGINS=http://localhost:5175,http://localhost:19005,http://localhost:3000

S3_ENDPOINT=http://localhost:9100
S3_ACCESS_KEY=local
S3_SECRET_KEY=local
ELASTICSEARCH_NODE=http://localhost:9200

ADMIN_TENANT_NAME=Default Tenant
ADMIN_TENANT_SLUG=default
ADMIN_EMAIL=admin@podcast.dev
ADMIN_NAME=Platform Admin
# Provide either ADMIN_PASSWORD or ADMIN_PASSWORD_HASH. Password takes precedence.
ADMIN_PASSWORD=changeme
# ADMIN_PASSWORD_HASH=
ADMIN_PASSWORD_SALT_ROUNDS=12

# Email (Resend) - Optional: Sign up at https://resend.com to get API key
RESEND_API_KEY=
EMAIL_FROM=noreply@podcast.app
EMAIL_FROM_NAME=Podcast App
FRONTEND_URL=http://localhost:5175
